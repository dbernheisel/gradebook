<%# needs local variable user %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% user.assignments.each do |a| %>
      <tr>
        <td><%= a.name %></td>
        <td><%= a.date %></td>
        <td><%= link_to 'Show', a %></td>
        <td><%= link_to 'Edit', edit_assignment_path(a) if instructor?(user) %></td>
        <td><%= link_to 'Destroy', method: :delete, data: { confirm: 'Are you sure?' } if instructor?(user)  %></td>
      </tr>
    <% end %>
  </tbody>
</table>
