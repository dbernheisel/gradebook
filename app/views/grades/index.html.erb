<p id="notice"><%= notice %></p>

<h1>Listing Grades</h1>

<table>
  <thead>
    <tr>
      <th>Score</th>
      <th>Date</th>
      <th>Student</th>
      <th>Assignment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.score %></td>
        <td><%= grade.date %></td>
        <td><%= @students.find(grade.student_id).fullname %></td>
        <td><%= grade.assignment_id %></td>
        <td><%= link_to 'Show', grade %></td>
        <% if instructor? %>
          <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
          <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if instructor? %>
  <%= link_to 'New Grade', new_grade_path %>
<% end %>
